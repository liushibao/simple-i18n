{
    "compilerOptions": {
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "esModuleInterop": true,
        "alwaysStrict": true,
        "declaration": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "logs",
        "bin",
        ".idea"
    ]
}